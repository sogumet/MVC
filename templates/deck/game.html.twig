{% extends "base.html.twig" %}

{% block title %}Game | Start{% endblock %}

{% block content %}

<form method="post">
    <fieldset>
    <legend>A dice game</legend>

    <p>
        <input type="submit" name="roll" value="Roll">
        <input type="submit" name="stay" value="Stay">
        <input type="submit" name="clear" value="Clear">
        <input type="submit" name="start" value="Start">
    </p>
      
    {% if data is defined %}
    {{dump(data)}} 
    {% for i in 0..(cards) %}
    {% if data.hand %}
        <img src={{ asset(data.hand[i].image) }}>
    {% endif %}    
    {% endfor %}
    
    <p>Cardsleft {{cardsleft}}</p>
    <p>CardsSum {{sum}}</p>
        {% endif %}
    
        {% if bank is defined %}
        {{dump(bank)}} 
        {% for i in 0..(bankcards) %}
        {% if bank.hand %}
            <img src={{ asset(bank.hand[i].image) }}>
            {% endif %}
        {% endfor %}
        <p>Cardsleft {{cardsleft}}</p>
        <p>CardsSum {{sumbank}}</p>
            {% endif %}
    
    {{ include('block/flash-message.html.twig') }}


    </fieldset>
</form>

{% endblock %}
