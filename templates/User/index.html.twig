{% extends 'base.html.twig' %}

{% block title %}Hello BooksController!{% endblock %}

{% block content %}
<div class="container-left">
<h1>User page</h1>
    <p>Name: {{ user.name }}</p>
    <p>Email: {{ user.email }}</p>
    <p>Role: {{ user.roles[0] }}</p>
    <p>Akronym: {{ user.akronym }}</p>

    <ul>
        <a href="{{ path('update_user', {email: user.email})}}">Update user</a>
        
    </ul>
</div>
{% endblock %}
