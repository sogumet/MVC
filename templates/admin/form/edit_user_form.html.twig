{% extends "base1.html.twig" %}

{% block title %}Admin | Edit{% endblock %}

{% block content %}

<main>
    <div class="container-left">
    <form method="post">

            <p class="p-form"><label for="name">Name</label></p>
            <input type="text" name="name" value={{user.name}}>
            <p class="p-form"><label for="akronym">Akronym</label></p>
            <input type="text" name="akronym" value={{user.akronym}}>
            <p class="p-form"><label for="email">Email</label></p>
            <input type="text" name="email" readonly value={{user.email}}> 
            <p class="p-form"><label for="role">Role  </label></p>
            <input type="text" name="role" value={{user.roles[0]}}> <br>
            
            
            <input class="input-field" type="submit" name="update" value="Update">
            <input class="input-field" type="submit" name="delete" value="Delete">
    </form>

